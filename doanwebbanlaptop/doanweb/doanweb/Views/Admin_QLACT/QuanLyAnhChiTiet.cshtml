@{
    ViewBag.Title = "QuanLyAnhChiTiet";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

@section ThemThuVienCss{
    <link rel="stylesheet" href="/Content/css/index.css">
    <link rel="stylesheet" href="/Content/css/dataTables.bootstrap4.min.css">
}
@section ThemThuVienJs{
    <script src="/Content/js/jquery.dataTables.js"></script>
    <script src="/Content/js/dataTables.bootstrap4.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Content/js/datatables-demo.js"></script>
}

@using doanweb.Models;
@model List<tbl_anhchitietsanpham>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Ảnh Chi Tiết Sản Phẩm</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <a class="btn btn-success ml-auto" href="@Url.Action("QuanLyAnhChiTiet_Them","Admin_QLACT")"><i class="fas "><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="#ffff" /><path d="M0 0h24v24H0z" fill="none" /></svg></i>  Thêm</a>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên Sản Phẩm</th>
                            <th>Ảnh Sản Phẩm</th>
                            <th>Ảnh Chi Tiết Của Sản Phẩm</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tên Sản Phẩm</th>
                            <th>Ảnh Sản Phẩm</th>
                            <th>Ảnh Chi Tiết Của Sản Phẩm</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenSanPham</td>
                                <td>
                                    <img src="@Url.Content("~/Content/images/sanpham/"+@item.AnhSanPham)" class="img-thumbnail" style="width:80px;height:80px;" alt="@item.TenSanPham">
                                </td>
                                <td>
                                    <img src="@Url.Content("~/Content/images/chitietsanpham/"+@item.DuongDan)" class="img-thumbnail" style="width:80px;height:80px;" alt="@item.TenSanPham">
                                </td>
                                <td>
                                    <a href="@Url.Action("QuanLyAnhChiTiet_Sua", "Admin_QLACT", new { @MaSua = item.Id })" class="icon_tacvu">
                                        <i class="fas "><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="none" d="M0 0h24v24H0z" /><path d="M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z" fill="#1cc88a" /></svg></i>
                                    </a>
                                    <a href="@Url.Action("QuanLyAnhChiTiet_Xoa", "Admin_QLACT", new { @MaXoa = item.Id })" class="icon_tacvu_xoa" style="color: red;">
                                        <i class="fas "><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" fill="#1cc88a" /><path d="M0 0h24v24H0z" fill="none" /></svg></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
