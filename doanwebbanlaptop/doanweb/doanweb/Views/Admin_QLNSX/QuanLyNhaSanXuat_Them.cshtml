@{
    ViewBag.Title = "QuanLyNhaSanXuat_Them";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

@section ThemThuVienCss{
    <link rel="stylesheet" href="/Content/css/index.css">
    <link rel="stylesheet" href="/Content/css/dataTables.bootstrap4.min.css">
}
@section ThemThuVienJs{
    <script src="/Content/js/jquery.dataTables.js"></script>
    <script src="/Content/js/dataTables.bootstrap4.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Content/js/datatables-demo.js"></script>
}
@using doanweb.Models;
@model tbl_nhasanxuat
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Thông Tin Nhà Sản Xuất</h1>
    <a class="btn btn-success ml-auto" href="@Url.Action("QuanLyNhaSanXuat","Admin_QLNSX")"><i class="fas "><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M10 9V5l-7 7 7 7v-4.1c5 0 8.5 1.6 11 5.1-1-5-4-10-11-11z" fill="#ffff" /><path d="M0 0h24v24H0z" fill="none" /></svg></i>  Trở Về</a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="container-fluid mt-3">
                <h4 class="mb-2">@ViewBag.QLNSX_T_TieuDe</h4>
                <form method="post" action="@Url.Action("QuanLyNhaSanXuat_Them","Admin_QLNSX")" role="form">
                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label for="TenNhaSanXuat">Tên Nhà Sản Xuất @ViewBag.QLNSX_T_TenNhaSanXuat</label>
                            @Html.TextBoxFor(model => model.TenNhaSanXuat, new { @type = "text", @class = "form-control", @id = "TenNhaSanXuat_T", @placeholder = "VD: Asus..." })

                        </div>


                        <div class="form-group col-sm-6">
                            <label for="NuocSanXuat">Nước Sản Xuất @ViewBag.QLNSX_T_NuocSanXuat</label>
                            @Html.TextBoxFor(model => model.NuocSanXuat, new { @type = "text", @class = "form-control", @id = "NuocSanXuat_T", @placeholder = "VD: Mỹ, Việt Nam, Hàn Quốc..." })

                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary"> Thêm </button>
                </form>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
